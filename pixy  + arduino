
#include <SPI.h>  
#include <Pixy.h>
#include <stdio.h>
# include <iostream.h>

Pixy;

void setup()
{

  Serial.begin(9660);
  Serial.print("Starting.....\n");

  pixy.init();
}

void loop()
{ 
  static int i = 0;
  int j;
  uint16_t block;
  char buf[32]; 
  
  block = pixy.getBlock();
  
  if (block)
  {
    i++;
    
    if (i%50==0)
    {
      printf(buf, "Detected %d:\n", block);
      Serial.print(buf);
      for (j=0; j<block; j++)
      {
        printf(buf, "  block %d: ", j);
        Serial.print(buf); 
        pixy.block[j].print();
      }
    }
  }  
}


